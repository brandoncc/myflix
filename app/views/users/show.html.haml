%section.user.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest('knwang@gmail.com'.downcase)}?s=40")
          %h2 
            = "#{@user.name}'s video collections(#{@user.queue_size})"
          %button.btn.btn-default Follow
        %table.table
          %thead
            %tr
              %th(width="30%") Video Title
              %th(width="15%") Genre
          %tbody
            - @user.my_queue_videos.each do |queue_item|
              %tr
                %td
                  = link_to "#{queue_item.video.title}", video_path(queue_item.video.id)
                %td
                  = link_to "TV show"

%section.user_reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      %header
        %h3 
          = "#{@user.name}'s Reviews (#{@user.review_size})"
      %ul
        = render @user.reviews
