%section.billing.container
  .row
    .col-sm-10.col-sm-offset-1
      .plan_and_payments
        %section.plan
          %header
            %h1 Billing
          %table.table
            %thead
              %tr
                %th
                %th Next Billing Date
                %th Price
            %tbody
              %tr
                %td The All You Can Watch Plan
                %td #{current_user.next_billing_date.strftime('%m/%d/%Y')}
                %td 9.99 per month
        = button_to "Cancel Service", nil, class: "btn btn-default"

        %section.payment_history
          %header
            %h3 Payment History
          %table.table
            %thead
              %tr
                %th Date
                %th Service Duration
                %th Total
            %tbody
              - current_user.payments.each do |payment|
                %tr
                  %td #{payment.created_at.strftime('%m/%d/%Y')}
                  %td #{payment.created_at.strftime('%m/%d/%Y')} - #{(payment.created_at + 1.month).yesterday.strftime('%m/%d/%Y')}
                  %td #{number_to_currency(payment.amount / 100.0)}
