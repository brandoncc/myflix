%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for([:admin, @video], style: :horizontal, left: 'col-md-3', right: 'col-sm-6', html: { multipart: true }) do |f|
          %ul.nav.nav-tabs
            %li
              = link_to 'Recent Payments', admin_payments_path
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            .form-group
              = f.text_field :title
            .form-group
              = f.collection_select :category_id, Category.all, :id, :name
            .form-group
              = f.text_area :description, rows: 8
            .form-group
              = f.file_field :large_cover, class: 'btn btn-file'
              = f.hidden_field :small_cover_cache
            .form-group
              = f.file_field :small_cover, class: 'btn btn-file'
              = f.hidden_field :small_cover_cache
            .form-group
              = f.text_field :video_url, label: 'Video URL'

          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              = f.submit 'Add Video', class: 'btn btn-default'
