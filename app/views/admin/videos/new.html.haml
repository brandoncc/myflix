%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-6" do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="") Recent Payments
            %li.active
              %a(href="/admin/videos/new") Add a New Video
          %br
          %fieldset
            = f.text_field :title
            = f.text_area :description
            = f.collection_check_boxes :category_ids, Category.all, :id, :name , label: 'Categories'
            = f.file_field :large_cover, label: 'Large Cover', label: 'Large Cover'           
            = f.file_field :small_cover, label: 'Small Cover', label: 'Small Cover'           
            .col-md-offset-3
              = f.submit 'Add Video'
          